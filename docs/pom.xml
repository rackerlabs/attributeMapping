<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.rackspace.identity.components</groupId>
        <artifactId>attribute-mapper</artifactId>
        <version>2.2.2-SNAPSHOT</version>
    </parent>

    <groupId>com.rackspace.identity.components.attribute-mapper</groupId>
    <artifactId>mapper-docs</artifactId>
    <packaging>jar</packaging>

    <name>Attribute Mapper Documentation</name>
    <description>Attribute Mapper core functionality</description>

    <build>
        <resources>
            <resource>
                <directory>${project.build.directory}/docs</directory>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <artifactId>maven-resources-plugin</artifactId>
                <version>3.0.2</version>
                <executions>
                    <execution>
                        <id>copy-resources</id>
                        <phase>package</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${project.build.directory}/site/sphinx</outputDirectory>
                            <resources>
                                <resource>
                                    <directory>src/site/sphinx</directory>
                                    <filtering>false</filtering>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.daisy.maven</groupId>
                <artifactId>xproc-maven-plugin</artifactId>
                <version>1.0.0</version>
                <configuration>
                    <pipeline>src/xpl/attribmap.xpl</pipeline>
                    <outputs>
                        <result>target/result.xml</result>
                    </outputs>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>xproc</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.daisy.maven</groupId>
                        <artifactId>xproc-engine-calabash</artifactId>
                        <version>1.0.0</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <groupId>kr.motd.maven</groupId>
                <artifactId>sphinx-maven-plugin</artifactId>
                <version>1.6.1</version>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.maven</groupId>
                        <artifactId>maven-model</artifactId>
                        <version>3.3.9</version>
                    </dependency>
                </dependencies>
                <configuration>
                    <sourceDirectory>${project.build.directory}/site/sphinx</sourceDirectory>
                    <outputDirectory>${project.build.directory}/docs</outputDirectory>
                    <warningsAsErrors>true</warningsAsErrors>
                </configuration>
                <executions>
                    <execution>
                        <phase>package</phase>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
